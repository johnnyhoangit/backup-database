# Database Type Configuration
DATABASE_TYPE=mysql # or postgresql

# MySQL Configuration
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=your_mysql_password
MYSQL_DATABASE=your_database
MYSQL_USE_DOCKER=false
MYSQL_DOCKER_CONTAINER=mysql-container

# MySQL Dump Options
MYSQL_DUMP_OPTIONS=--single-transaction --quick --lock-tables=false
MYSQL_DUMP_COMPRESS=true
MYSQL_DUMP_ADD_DROP_TABLE=true
MYSQL_DUMP_ADD_LOCKS=true
MYSQL_DUMP_EXTENDED_INSERT=true
MYSQL_DUMP_COMPLETE_INSERT=false
MYSQL_DUMP_CREATE_OPTIONS=true
MYSQL_DUMP_DISABLE_KEYS=true
MYSQL_DUMP_SET_CHARSET=true
MYSQL_DUMP_DELAYED_INSERT=false
MYSQL_DUMP_REPLACE=false
MYSQL_DUMP_IGNORE_TABLE=

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_DATABASE=your_database
POSTGRES_USE_DOCKER=false
POSTGRES_DOCKER_CONTAINER=postgres-container

# PostgreSQL Dump Options
POSTGRES_DUMP_OPTIONS=--clean --if-exists
POSTGRES_DUMP_COMPRESS=true
POSTGRES_DUMP_SCHEMA_ONLY=false
POSTGRES_DUMP_DATA_ONLY=false
POSTGRES_DUMP_NO_OWNER=true
POSTGRES_DUMP_NO_PRIVILEGES=true
POSTGRES_DUMP_NO_TABLESPACES=true
POSTGRES_DUMP_IGNORE_TABLE=

# Backup Configuration
BACKUP_OUTPUT_DIR=./backups
BACKUP_FILENAME_PREFIX=backup
BACKUP_RETENTION_DAYS=7
BACKUP_SCHEDULE=0 0 * * *

# S3 Configuration
S3_ENABLED=false
S3_BUCKET=your-backup-bucket
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=your_aws_access_key
S3_SECRET_ACCESS_KEY=your_aws_secret_key
S3_PATH=backups/

# Logging Configuration
LOG_LEVEL=info
LOG_DIR=./logs
LOG_MAX_FILES=7

# Notification Configuration
NOTIFICATION_ENABLED=true
NOTIFICATION_SUCCESS=true
NOTIFICATION_ERROR=true
NOTIFICATION_SLACK_ENABLED=false
NOTIFICATION_SLACK_WEBHOOK_URL=
NOTIFICATION_GOOGLE_CHAT_ENABLED=false
NOTIFICATION_GOOGLE_CHAT_WEBHOOK_URL=
NOTIFICATION_GOOGLE_CHAT_THREAD_KEY= 